# Use an official Python base image
FROM python:3.9.12-slim

# Set the working directory in the container
WORKDIR /app

# Install system dependencies (cron) and clean up unnecessary files
RUN apt-get update && \
    apt-get install -y --no-install-recommends cron && \
    rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY ./code/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Install spacy model
RUN python -m spacy download zh_core_web_md && \
    python -m spacy download en_core_web_md

# Install stopwords from nltk
RUN python -c "import nltk; nltk.download('stopwords')" && \
    python -c "import nltk; nltk.download('wordnet')" && \
    python -c "import nltk; nltk.download('punkt')"

# Copy application code and startup script
COPY ./code /app
COPY startup.sh /startup.sh
RUN chmod +x /startup.sh

# Copy crontab and set permissions
COPY ./crontab /etc/cron.d/hello-cron
RUN chmod 0644 /etc/cron.d/hello-cron && \
    crontab /etc/cron.d/hello-cron

# Expose port 80 to the outside world
EXPOSE 80

# Start the startup.sh script on container startup
CMD ["/startup.sh"]
